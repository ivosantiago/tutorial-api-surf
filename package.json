{
  "name": "tutorial-api-surf",
  "version": "1.0.0",
  "description": "Node.js API ",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "start": "yarn build && node dist/src/index.js",
    "start:dev": "dotenv -e .env -- ts-node-dev --transpile-only 'src/index.ts' | pino-pretty -c",
    "lint": "eslint ./src ./test --ext .ts",
    "lint:fix": "eslint ./src ./test --ext .ts --fix",
    "test:unit": "dotenv -e .env -- jest",
    "test:functional": "dotenv -e .env -- jest --projects ./test --runInBand",
    "test": "yarn lint && yarn style:check && yarn test:unit && yarn test:functional",
    "style:check": "prettier --check 'src/**/*.ts' 'test/**/*.ts'",
    "style:fix": "prettier --write 'src/**/*.ts' 'test/**/*.ts'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ivosantiago/tutorial-api-surf.git"
  },
  "keywords": [
    "nodejs",
    "typescript",
    "api"
  ],
  "author": "Ivo Santiago <ivosantiago@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ivosantiago/tutorial-api-surf/issues"
  },
  "homepage": "https://github.com/ivosantiago/tutorial-api-surf#readme",
  "devDependencies": {
    "@types/axios": "^0.14.0",
    "@types/bcrypt": "^3.0.0",
    "@types/config": "^0.0.38",
    "@types/cors": "^2.8.10",
    "@types/express": "^4.17.11",
    "@types/express-pino-logger": "^4.0.2",
    "@types/express-rate-limit": "^5.1.1",
    "@types/http-status-codes": "^1.2.0",
    "@types/jest": "^26.0.20",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/lodash": "^4.14.168",
    "@types/module-alias": "^2.0.0",
    "@types/moment": "^2.13.0",
    "@types/mongoose": "5.10.3",
    "@types/multer": "^1.4.5",
    "@types/nock": "^11.1.0",
    "@types/node": "^14.14.31",
    "@types/node-cache": "^4.2.5",
    "@types/pino": "^6.3.6",
    "@types/supertest": "^2.0.10",
    "@types/swagger-ui-express": "^4.1.2",
    "@typescript-eslint/eslint-plugin": "^4.16.1",
    "@typescript-eslint/parser": "^4.16.1",
    "eslint": "^7.21.0",
    "jest": "^26.6.3",
    "nock": "^13.0.11",
    "pino-pretty": "^4.7.1",
    "prettier": "^2.2.1",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.2",
    "ts-node-dev": "^1.1.6",
    "typescript": "^4.2.2"
  },
  "dependencies": {
    "@overnightjs/core": "^1.7.5",
    "axios": "^0.21.1",
    "bcrypt": "^5.0.1",
    "body-parser": "^1.19.0",
    "config": "^3.3.4",
    "cors": "^2.8.5",
    "dotenv-cli": "^4.0.0",
    "express": "^4.17.1",
    "express-openapi-validator": "3.16.1",
    "express-pino-logger": "^6.0.0",
    "express-rate-limit": "^5.2.6",
    "http-status-codes": "^2.1.4",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "module-alias": "^2.2.2",
    "moment": "^2.29.1",
    "mongoose": "5.10.3",
    "node-cache": "^5.1.2",
    "pino": "^6.11.1",
    "swagger-ui-express": "^4.1.6"
  }
}
